# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file          controllers.Assets.versioned(path="/public", file: Asset)

# User Mapping Info
GET    /user/formSave         controllers.UserController.index()
POST   /user/save             controllers.UserController.save()
GET    /user/find             controllers.UserController.find()
GET    /user/findAll          controllers.UserController.findAll()
GET    /user/findSome         controllers.UserController.findSome()
GET    /user/delete/:id       controllers.UserController.delete(id:Long)
GET    /user/formModify/:id   controllers.UserController.pageModify(id:Long)
POST   /user/modify           controllers.UserController.modify()

# Web Socket Demo
GET    /v_ws                  controllers.WebSocketController.index()
GET    /ws                    controllers.WebSocketController.ws